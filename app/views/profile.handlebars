<!-- Profile avatar/bio section -->
<div class="container .center-align">
  <div class="row">
    <div class="col s12 center-align z-depth-2 teal accent-4">
      {{!-- <i class="material-icons" style="font-size: 200px; align-items: center;">account_circle</i> --}}
      <img src="/userdata/profile/{{Userdetail.dataValues.profileImg}}" alt="" style="margin: 1.3em;">
      <p class="flow-text">
        <h5 class="center-align white-text"><strong>{{firstName}} {{lastName}}</strong></h5>
        <i class="white-text">Sacramento, CA</i>
        <p class="white-text">
          {{Userdetail.dataValues.bio_statement}}
          {{!-- I'm a digital illustrator from Sacramento, CA. I've been in the biz for over 8 years, and
          would be happy to work on your next art project. Send me a message to start the conversation! --}}
        </p>
      </p>
    </div>
  </div>
  <!-- section divider and header - requested gigs -->
  <!-- Gigs go hereeeeeeeeeeeee -->
  <!-- gig 1 -->
  <div class="row user-request-container">

  <div class="row">
    <form id="req-form" name="request" data-user-id="{{id}}">
      <label for="title">Title</label>
      <input class="text" name="title" type="text" id="title" />
      <label for="description">Description</label>
      <input name="description" type="text" id="description" />
      <label for="category">Category</label>
      <input name="category" type="text" id="category" />
      <label for="tags">Tags</label>
      <input name="tags" type="text" id="tags" />
      <label for="turnaround_time">Turnaround Time (in whole hours)</label>
      <input name="turnaround_time" type="number" min="1" max="168" value="24" id="turnaround_time" />
      <input class="btn" type="submit" value="Submit" />
    </form>

  </div>
</div>

