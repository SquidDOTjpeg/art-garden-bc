<!-- Profile avatar/bio section -->
<div class="container center-align main-container">
  <div class="section no-pad-bot" id="profile-banner">
    <div class="row" id="profile-header-row">
      <div class="col s12 center-align">
        {{!-- <i class="material-icons" style="font-size: 200px; align-items: center;">account_circle</i> --}}
        <img src="/userdata/profile/{{Userdetail.dataValues.profileImg}}" alt="" style="margin: .25em; height: 156px;">
        <p class="flow-text">
          <h5 class="center-align black-text"><strong>{{firstName}} {{lastName}}</strong></h5>
          <i class="black-text">{{Userdetail.dataValues.location}}</i>
          <p class="black-text">
            {{Userdetail.dataValues.bio_statement}}
            {{!-- I'm a digital illustrator from Sacramento, CA. I've been in the biz for over 8 years, and
            would be happy to work on your next art project. Send me a message to start the conversation! --}}
          </p>
        </p>
      </div>
    </div>
  </div>


  {{!-- divide the profile with contract requests --}}
  <div class="row divider"></div>
  {{!-- divide the profile with contract requests --}}

  <div class="request-container main-container" style="width: 100%;"></div>

  <div class="row" style="height: 1px; margin: 0;">
    {{!-- create new contract button  --}}
    <button type="button" class="waves-effect waves-light btn sidenav-trigger" id="open-request-button"
      data-target="request-collapsible"><i class="fa fa-plus-square" id="open-request-button-icon"
        style="font-size: 20px; padding-right: .69em;"></i> New Contract</button>

    <div class="sidenav" id="request-collapsible">
      <form id="req-form" name="request" data-user-id="{{id}}" style="padding:1em; text-align:left; margin:0;">
        <h5>Create a new contract:</h5>
        <label for="title">Title</label>
        <input class="text" name="title" type="text" id="title" required />
        <label for="description">Description</label>
        <textarea name="description" id="description" style="height: 7em;" required></textarea>
        <label for="turnaround_time" style="display: block;">Turn Around Time in Hours (Max 168 or 7 days) </label>
        <input name="turnaround_time" type="number" min="1" max="168" value="24" id="turnaround_time" /><br>
        <label for="starting_price" style="display: block;">Starting Price</label>
        <input type="number" min="7" value="7" name="starting_price" id="starting-price"> <br>
        <label for="category">Choose a medium of art:</label>
        <select name="category" id="category" style="display: inline-block;">
          <option value="digital" selected>Digital</option>
          <option value="painting">Painting</option>
          <option value="sketch">Sketch</option>
          <option value="lineart">Line art</option>
          <option value="photography">Photography</option>
          <option value="videography">Videography</option>
        </select>
        {{!-- more  --}}
        <p class="btn-flat" id="open-more">more...</p>
        <div class="request-form-content" style="display: none;">
          <label for="tags">Tags (use comma for more tags)</label>
          <input name="tags" type="text" id="tags" />
          {{!-- <label for="other">Other</label>
          <input name="other" type="text" id="other" />
          <label for="other">Other</label>
          <input name="other" type="text" id="other" />
          <label for="other">Other</label>
          <input name="other" type="text" id="other" /> --}}
        </div>
        <div class="center-align">
          <input class="btn" type="submit" value="Submit" />
          <span class="btn-flat" id="reset-request-form">clear form </span>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="/_js/profile-copy.js"></script>